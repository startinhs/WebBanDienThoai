@model IEnumerable<WebsiteBanDienThoai23.DAL.Models.SanPham>
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/css/product.css">
    <link rel="stylesheet" href="~/css/home.css">
    <link rel="stylesheet" href="~/css/bootstrap-theme.css">
    <link rel="stylesheet" href="~/css/bootstrap.css">
    <link rel="stylesheet" href="~/css/slick.css">
    <link rel="stylesheet" href="~/css/slick-theme.css">
</head>

<body>
    <section>
        <div class="container-fluid section">
            <div class="row type_dien_thoai">
                <div class="col-md-12">
                    <ul class="list_type_dien_thoai">
                        <li><a href="/Tablet/Name?key=ipad"><img src="~/images/144.jpg" alt="" class="img-responsive"></a></li>
                        <li><a href="/Tablet/Name?key=samsung"><img src="~/images/89.jpg" alt="" class="img-responsive"></a></li>
                        <li><a href="/Tablet/Name?key=oppo"><img src="~/images/90.jpg" alt="" class="img-responsive"></a></li>
                        <li><a href="/Tablet/Name?key=xiaomi"><img src="~/images/91.jpg" alt="" class="img-responsive"></a></li>
                        <li><a href="/Tablet/Name?key=vivo"><img src="~/images/92.jpg" alt="" class="img-responsive"></a></li>
                        <li><a href="/Tablet/Name?key=huawei"><img src="~/images/146.jpg" alt="" class="img-responsive"></a></li>
                        <li><a href="/Tablet/Name?key=realme"><img src="~/images/94.jpg" alt="" class="img-responsive"></a></li>
                        <li><a href="/Tablet/Name?key=lenovo"><img src="~/images/147.jpg" alt="" class="img-responsive"></a></li>
                        <li class="seemore_dien_thoai"><a href="/Tablet">Xem thêm</a></li>
                    </ul>
                </div>
            </div>
            <div class="row filter_dien_thoai">
                <div class="col-md-12">
                    <ul class="list_filter_dien_thoai">
                        <li>Chọn mức giá: </li>
                        <li><a href="/Tablet/Price?min=0&max=12000000">Dưới 12 triệu</a></li>
                        <li><a href="/Tablet/Price?min=12000000&max=14000000">Từ 12 - 14 triệu</a></li>
                        <li><a href="/Tablet/Price?min=14000000&max=17000000">Từ 14 - 17 triệu</a></li>
                        <li><a href="/Tablet/Price?min=17000000&max=23000000">Từ 17 - 23 triệu</a></li>
                        <li><a href="/Tablet/Price?min=23000000&max=50000000">Trên 23 triệu</a></li>
                        <li><a href="#"></a></li>
                    </ul>
                </div>
            </div>
            <div class="row phones_dien_thoai">
                <div class="col-md-12 title_dien_thoai">
                    <h3>danh sách tablet đã tìm kiếm</h3>
                </div>
                <div class="row filter_dien_thoai">
                    <div class="col-md-12">
                        <ul class="list_filter_dien_thoai">
                            <li>Bộ lọc: </li>
                            <li><input type="checkbox" name="new_dien_thoai"> Pin trâu</li>
                            <li><input type="checkbox" name="installment_dien_thoai"> Camera đẹp</li>
                            <li><input type="checkbox" name="only_sell_online_dien_thoai"> Hỗ trợ 5G</li>
                            <li><button>Lọc</button></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-12 main_list_dien_thoai">
                    <ul class="list_dien_thoai">
                        @foreach (var item in Model)
                        {
                            <li>
                                <a asp-action="Details" asp-route-id="@item.MaSp">
                                    <div class="phone_dien_thoai">
                                        <img src="~/imgProduct/@item.Hinh1" alt="" class="img-responsive">
                                        <div class="sub_title">
                                            <h4>
                                                <a href="@Url.Action("Details", "DetailsProduct", new { id = item.MaSp })">@item.TenSp</a>
                                            </h4>
                                            <p class="price">@Math.Round(item.Gia * (1 - (item.GiamGia / 100))).ToString("N0")<span>₫</span>
                                            <p class="old_price">@item.Gia.ToString("N0")</p>
                                        </div>
                                    </div>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
            <div class="col-md-12 text-center">
                <a href="/Tablet" class="btn btn-primary viewmore_dien_thoai">
                    Xem thêm tablet <span class="glyphicon glyphicon-triangle-bottom"></span>
                </a>
            </div>
            <div class="col-md-12 text-center">
                <br />
            </div>
        </div>
        <div class="container-fluid main_shipper_dien_thoai">
            <div class="row" style="max-width: 1300px; margin: 0 auto;">
                <div class="col-md-12">
                    <ul class="list_shipper_dien_thoai">
                        <li>
                            <p>Giao hàng hoả tốc trong 1 giờ</p>
                        </li>
                        <li>
                            <p>Thanh toán linh hoạt: tiền mặt, visa / master, trả góp</p>
                        </li>
                        <li>
                            <p>Trải nghiệm sản phẩm tại nhà</p>
                        </li>
                        <li>
                            <p>Lỗi đổi tại nhà trong 1 ngày</p>
                        </li>
                        <li>
                            <p>Hỗ trợ suốt thời gian sử dụng. Hotline: <a href="#">1800.1763</a></p>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </section>

</body>

</html>