@model IEnumerable<WebsiteBanDienThoai23.DAL.Models.SanPham>
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/css/DienThoai_style.css">
    <link rel="stylesheet" href="~/css/Home_style.css">
    <link rel="stylesheet" href="~/css/bootstrap-theme.css">
    <link rel="stylesheet" href="~/css/bootstrap.css">
    <link rel="stylesheet" href="~/css/slick.css">
    <link rel="stylesheet" href="~/css/slick-theme.css">
</head>

<body>
    <section>
        <div class="container-fluid section">
            <div class="row type_dien_thoai">
                <div class="col-md-12">
                    <ul class="list_type_dien_thoai">
                        <li><a href="/Tablet/TimTheoTen?SearchString=ipad"><img src="~/images/88.jpg" alt="" class="img-responsive"></a></li>
                        <li><a href="/Tablet/TimTheoTen?SearchString=samsung"><img src="~/images/89.jpg" alt="" class="img-responsive"></a></li>
                        <li><a href="/Tablet/TimTheoTen?SearchString=oppo"><img src="~/images/90.jpg" alt="" class="img-responsive"></a></li>
                        <li><a href="/Tablet/TimTheoTen?SearchString=xiaomi"><img src="~/images/91.jpg" alt="" class="img-responsive"></a></li>
                        <li><a href="/Tablet/TimTheoTen?SearchString=vivo"><img src="~/images/92.jpg" alt="" class="img-responsive"></a></li>
                        <li><a href="/Tablet/TimTheoTen?SearchString=huawei"><img src="~/images/93.jpg" alt="" class="img-responsive"></a></li>
                        <li><a href="/Tablet/TimTheoTen?SearchString=realme"><img src="~/images/94.jpg" alt="" class="img-responsive"></a></li>
                        <li><a href="/Tablet/TimTheoTen?SearchString=oneplus"><img src="~/images/oneplus.png" alt="" class="img-responsive"></a></li>
                        <li><a href="/Tablet/TimTheoTen?SearchString=poco"><img src="~/images/poco.png" alt="" class="img-responsive"></a></li>
                        <li class="seemore_dien_thoai"><a href="/Tablet">Xem thêm</a></li>
                    </ul>
                </div>
            </div>
            <div class="row filter_dien_thoai">
                <div class="col-md-12">
                    <ul class="list_filter_dien_thoai">
                        <li>Chọn mức giá: </li>
                        <li><a href="/Tablet/TimTheoGia?minPrice=0&maxPrice=12000000">Dưới 12 triệu</a></li>
                        <li><a href="/Tablet/TimTheoGia?minPrice=12000000&maxPrice=14000000">Từ 12 - 14 triệu</a></li>
                        <li><a href="/Tablet/TimTheoGia?minPrice=14000000&maxPrice=17000000">Từ 14 - 17 triệu</a></li>
                        <li><a href="/Tablet/TimTheoGia?minPrice=17000000&maxPrice=23000000">Từ 17 - 23 triệu</a></li>
                        <li><a href="/Tablet/TimTheoGia?minPrice=23000000&maxPrice=50000000">Trên 23 triệu</a></li>
                        <li><a href="#"></a></li>
                    </ul>
                </div>
            </div>
            <div class="row phones_dien_thoai">
                <div class="col-md-12 title_dien_thoai">
                    <h3>danh sách điện thoại</h3>
                </div>
                <div class="row filter_dien_thoai">
                    <div class="col-md-12">
                        <ul class="list_filter_dien_thoai">
                            <li>Bộ lọc: </li>
                            <li><input type="checkbox" name="new_dien_thoai"> Pin trâu</li>
                            <li><input type="checkbox" name="installment_dien_thoai"> Camera đẹp</li>
                            <li><input type="checkbox" name="only_sell_online_dien_thoai"> Hỗ trợ 5G</li>
                            <li><button>Lọc</button></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-12 main_list_dien_thoai">
                    <ul class="list_dien_thoai">
                        @foreach (var item in Model)
                        {
                            <li>
                                <a asp-action="Details" asp-route-id="@item.MaSp">
                                    <div class="phone_dien_thoai">
                                        <img src="~/imgProduct/@item.Hinh1" alt="" class="img-responsive">
                                        <div class="sub_title">
                                            <h4>
                                                <a href="@Url.Action("Details", "DetailsProduct", new { id = item.MaSp })">@item.TenSp</a>
                                            </h4>
                                            <p class="price">@Math.Round(item.Gia * (1 - (item.GiamGia / 100))).ToString("N0")<span>₫</span>
                                            <p class="old_price">@item.Gia.ToString("N0")</p>
                                        </div>
                                    </div>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
                <div style="text-align:center; font-family:Consolas">
                    @{
                        if (ViewBag.TotalPages > 1)
                        {
                            for (int i = 1; i <= ViewBag.TotalPages; i++)
                            {
                                if (i == ViewBag.CurrentPage)
                                {
                                    <span>@i</span>
                                }
                                else
                                {
                                    <a style="font-size: 17px" href="/Tablet?page=@i">@i</a>
                                }
                            }
                        }
                    }
                </div>

            </div>
        </div>
        <div class="container-fluid main_shipper_dien_thoai">
            <div class="row" style="max-width: 1300px; margin: 0 auto;">
                <div class="col-md-12">
                    <ul class="list_shipper_dien_thoai">
                        <li>
                            <p>Giao hàng hoả tốc trong 1 giờ</p>
                        </li>
                        <li>
                            <p>Thanh toán linh hoạt: tiền mặt, visa / master, trả góp</p>
                        </li>
                        <li>
                            <p>Trải nghiệm sản phẩm tại nhà</p>
                        </li>
                        <li>
                            <p>Lỗi đổi tại nhà trong 1 ngày</p>
                        </li>
                        <li>
                            <p>Hỗ trợ suốt thời gian sử dụng. Hotline: <a href="#">1800.1763</a></p>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </section>

</body>

</html>